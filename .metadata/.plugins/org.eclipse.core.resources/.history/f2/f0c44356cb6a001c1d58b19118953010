package basic;

import java.util.Scanner;

public class E1SumOfnNaturalNumber {

	public static Scanner sc;
	static int toWhere;
	
	public static void main(String[] args) {
		sc = new Scanner(System.in);
		toWhere = sc.nextInt();
		int prev = 0;
		int sum = 0;
		while(prev <= toWhere) {
			sum += prev;
			prev++;
		}
		System.out.println(sum);
	}

}
